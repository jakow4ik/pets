<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primarily_background</item>
        <item name="colorPrimaryDark">@color/primarily_background</item>
        <item name="colorAccent">@color/accent_green</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="appBarLayoutStyle">@style/Widget.App.AppBarLayout</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="postSplashScreenTheme">@style/Theme.App.Base</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>
</resources>
